# Environment
ENVIRONMENT=development
PORT=8080

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=base
POSTGRES_SSL_MODE=disable

# DynamoDB Local
DYNAMO_ENDPOINT=http://localhost:8000
DYNAMO_PORT=8000
DYNAMO_REGION=us-east-1

# AWS Credentials (use dummy values for local DynamoDB)
AWS_ACCESS_KEY_ID=local
AWS_SECRET_ACCESS_KEY=local

# CloudWatch (production only - leave AWS_REGION unset for local dev)
# AWS_REGION=us-east-1
# CLOUDWATCH_NAMESPACE=App/API

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URL=http://localhost:5173/auth/google/callback

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379

# Session
SESSION_SECRET=dev-secret-change-in-production
